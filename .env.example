# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Paths
DATA_DIR=data/
MODEL_DIR=models/
LOG_DIR=logs/
EXPERIMENTS_DIR=experiments/

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=rayscale-ml
MLFLOW_REGISTRY_URI=sqlite:///mlflow.db

# Ray
RAY_ADDRESS=auto
RAY_NUM_CPUS=4
RAY_USE_GPU=false
RAY_RUNTIME_ENV_PY_MODULES=""

# Apple Silicon
USE_MPS=true
MPS_FALLBACK_TO_CPU=true

# Model training
TRAIN_BATCH_SIZE=1024
TRAIN_LEARNING_RATE=0.001
TRAIN_NUM_EPOCHS=10
TRAIN_HIDDEN_DIM=64

# Feature engineering
FEATURE_INTERACTION_ENABLED=true
FEATURE_SCALING_METHOD=standard